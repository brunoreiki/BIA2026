{{!
    @template theme_eadtraining/settings/colors

    Example context (json):
    {
        "background": "#f0ff0f",
        "startcolor": true,
        "brandcolor": false,
        "footercolor": false
    }
}}
<div id="{{{uniqid}}}">
    {{#colors}}
        <div class="training-theme-select-item">
            <div class="preview" style="background:{{{.}}}"
                 data-color="{{{.}}}">
                <span>{{{.}}}</span>
            </div>
        </div>
    {{/colors}}
</div>

{{#js}}
    /*<script>*/
    require(["jquery"], function($) {
        $("#{{{uniqid}}} .preview").click(function() {
            let color = $(this).attr("data-color");
            {{#startcolor}}
                $(`[id^="id_s_theme_"][id$="_startcolor"]`)
                        .val(color)
                        .minicolors("settings", {value: color});
            {{/startcolor}}
            {{#brandcolor}}
                $(`[id^="id_s_theme_"][id$="_brandcolor"]`)
                        .val(color)
                        .minicolors("settings", {value: color});
            {{/brandcolor}}
            {{#footercolor}}
                $(`[id^="id_s_theme_"][id$="_footer_background_color"]`)
                        .val(color)
                        .minicolors("settings", {value: color});
            {{/footercolor}}
        });
    });
{{/js}}
